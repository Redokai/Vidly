
@model Vidly.Models.Customer
@{
    ViewBag.Title = "Customers Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers Detail</h2>

@if (Model == null)
{
    <h3>Cliente não cadastrado</h3>
}
else
{
    <h3>@Model.Name</h3>
    <ul>
        <li>Membership Type: @Model.MembershipType.Name</li>
        <li>Birthdate: @Model.Birthdate.ToShortDateString()</li>
    </ul>
}